{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "dist/esm",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "declarationMap": true,
    "skipLibCheck": true
  },
  "exclude": ["dist", "node_modules"],
  "include": ["src"]
}
